<div class="container">
  <div class="row">

    <div class="col-sm-3">
      <div class="row">
        <%= render 'users/sidebar', user:current_user %>
      </div>
      <div class="row">
        <%= render 'books/sidebar', new_book:@new_book %>
      </div>
    </div>

    <div class="col-sm-9">
      <h2>Users</h2>

        <table class="table">
          <thead>
            <tr>
              <th colspan="1"></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>

          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: 'no_image.jpg', size: '40x40' %></td>
                <td><%= user.name %></td>
                <td><%= link_to "show", user_path(user) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>

  </div>
</div>