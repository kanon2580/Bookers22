<div class="container">
  <div class="success">
    <%= flash[:book_created] %>
    <!--  出来るか否か見たいやつ => 出来た。 books#show-->
  </div>
</div>

<div class="container">
  <div class="row">

    <div class="col-sm-3">
      <div class="row">
        <%= render 'users/sidebar', user:@user %>
      </div>
      <div class="row">
        <%= render 'books/sidebar', new_book:@new_book %>
      </div>
    </div>

<div class="col-sm-9">
  <h2>Books</h2>

  <table class="table">
    <thead>
      <tr>
        <th colspan="1"></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: 'no_image.jpg', size: '40x40' %></td>
          <td><%= link_to book.title, book_path(book) %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

  </div>
</div>