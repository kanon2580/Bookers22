<div class="container">
  <div class="offset-sm-4">

    <h2>User info</h2>

    <%= form_for (@user) do |f| %>
      <%= f.label :name %><br>
      <%= f.text_field :name %><br>

      <%= f.label :image %><br>
      <%= f.attachment_field :profile_image %><br>

      <%= f.label :introduction %><br>
      <%= f.text_area :introduction %><br>

      <%= f.submit "Update User" %>
    <% end %>

  </div>
</div>
