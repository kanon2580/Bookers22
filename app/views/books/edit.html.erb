<div class="container">
  <div class="row">

    <div class="offset-sm-4 col-sm-4">
      <h2>Editing Book</h2>

      <%= form_for @book do |f| %>
        <%= f.label :title %><br>
        <%= f.text_field :title %><br>

        <%= f.label :opinion %><br>
        <%= f.text_area :body %><br>

        <%= f.submit 'Update Book' %>
      <% end %>
    </div>

  </div>
</div>